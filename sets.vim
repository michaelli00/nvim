syntax on
filetype plugin on

set encoding=utf-8
set tabstop=2 softtabstop=2
set shiftwidth=2
set expandtab
set smartindent
set ignorecase
"allow swapping buffers w/o saving"
set hidden
set noerrorbells
set scrolloff=8
set signcolumn=yes
set colorcolumn=80

"Line number"
set nu 
set relativenumber
set smartcase

"spelling"
setlocal spell
set spelllang=nl,en_gb
